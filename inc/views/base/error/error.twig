{% extends 'layouts/master.twig' %}

{% block head %}
    <title>{% if title %}{{ title }}{% else %}{{ mybb.settings.bbname }}{% endif %}</title>
{% endblock head %}

{% block body %}
<div class="page-content">
    <div class="alert alert--danger">
    	<i class="alert__icon fas fa-exclamation-triangle"></i>
    	<div class="alert__message">
    		{% if title %}<h2 class="alert__title">{{ title }}</h2>{% endif %}
            <p class="alert__description">{% if error %}{{ error|raw }}{% else %}{{ lang.unknown_error }}{% endif %}</p>
        </div>
    </div>
</div>
{% endblock body %}
